<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainMenu">

    <TextView
        android:id="@+id/txtTitle"
        android:text="News Kategori"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/hideung"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:orientation="vertical">

        <Button
            android:id="@+id/kategori1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Kategori 1"/>

        <Button
            android:id="@+id/kategori2"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategori 2"/>

        <Button
            android:id="@+id/kategori3"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategori 3"/>

        <Button
            android:id="@+id/kategori4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategori 4"/>

    </LinearLayout>
</RelativeLayout>